<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "subjectboard">
<!-- 리스트 출력, 페이징, 검색어기능 -->
<select id = "listPage" resultType = "uni.board.model.SubjectBoardDto" parameterType = "uni.board.model.SearchCriteria">
SELECT  * FROM ( 
		        SELECT NO, 
		               TITLE, 
		               CONTENT, 
		               WRITER, 
		               BOARD_DT,
		               HIT,
		               MEM_NO,
		               DEPT_NM,
		               ROW_NUMBER() OVER(ORDER BY NO DESC) AS RNUM
		         FROM SUBJECT_BOARD_TB WHERE 1=1
		         <include refid="search"></include>
		         ) MP
		WHERE RNUM BETWEEN #{rowStart} AND #{rowEnd}
		ORDER BY NO DESC;
</select>
<select id = "listCount" resultType = "int" parameterType = "uni.board.model.SearchCriteria">
select count(no) 
	from subject_board_tb  
	where 1=1
	<include refid = "search"></include> 
	and no > 0
</select>
<sql id = "search">
	<if test = "searchType != null">
		<if test = "searchType == 't'.toString()">AND TITLE LIKE CONCAT('%',#{keyword},'%')</if>
		<if test = "searchType == 'c'.toString()">AND CONTENT LIKE CONCAT('%',#{keyword},'%')</if>
		<if test = "searchType == 'w'.toString()">AND WRITER LIKE CONCAT('%',#{keyword},'%')</if>
		<if test = "searchType == 'tc'.toString()">AND (TITLE LIKE CONCAT('%',#{keyword},'%')) OR (CONTENT LIKE CONCAT('%',#{keyword},'%'))</if>
		<if test = "searchType == 'dept'.toString()">AND DEPT_NM LIKE CONCAT('%',#{keyword},'%')</if>
	</if>
</sql>
<select id = "dept_nm" resultType = "uni.board.model.DeptNm">
select * from dept_tb where dept_nm != '교양'
</select>

<!-- 게시판 글쓰기 -->
<insert id = "insertBoard" parameterType = "uni.board.model.SubjectBoardDto">
insert into subject_board_tb(mem_no,dept_nm,title,content,writer,prof_cd) values(#{mem_no},#{dept_nm},#{title},#{content},#{writer},#{prof_cd})
</insert>
<!-- 게시판 글 조회 -->
<select id = "selectTitle" parameterType = "int" resultType = "uni.board.model.SubjectBoardDto">
select * from subject_board_tb where no = #{no}
</select>
<!-- 조회수 증가 -->
<update id = "addHit" parameterType = "int">
update subject_board_tb set hit = hit+1 where no = #{no}
</update>
<!-- 게시판 글 삭제 -->
<delete id = "deleteTitle" parameterType = "int">
delete from subject_board_tb where no = #{no} 
</delete>
<!-- 게시판 글 수정 -->
<update id = "updateTitle" parameterType = "uni.board.model.SubjectBoardDto">
update subject_board_tb set title = #{title}, content = #{content} where no = #{no}
</update>

<!-- 학과 게시판 교수학과 출력 -->
<select id = "deptList" resultType = "string" parameterType = "int">
select dept_nm from professor_tb p, dept_tb d where p.dept_cd = d.dept_cd and prof_cd = #{prof_cd}
</select>
</mapper>